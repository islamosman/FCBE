@model List<Fly.DomainModel.Trips>

@{ 
    Layout = null;
}
<div class="modal-body" style="background-color:#ffffff;">
    @if (Model.Count > 0)
    {
        <div class="ProjList panel-body table-responsive">
            <table class="table table-striped table-bordered table-hover table-full-width dataTable no-footer" cellspacing="0" id="tablelookups">
                <thead>
                <thead>
                    <tr>
                        <td>Scotter</td>
                        <td>Start</td>
                        <td>End</td>
                        <td>Duration</td>
                        <td>Amount</td>
                        <td>IsPaied</td>
                        <td>Rate</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr>
                            <td>@item.Vehicles.Name</td>
                            <td>@item.StartTime.ToString("dd/MM/yyyy hh:mm tt")</td>
                            <td>@(item.EndTime.HasValue ? item.EndTime.Value.ToString("dd/MM/yyyy hh:mm tt") : "")</td>
                            <td>@item.Duration</td>
                            <td>@item.Amount</td>
                            <td>@item.IsPaid</td>
                            <td>@item.Rate</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No Data Found
        </div>
    }
</div>

